{
  "rules": {
    ".read": true,
    ".write": true,
    "products": {
      ".read": true,
      ".write": false,
      "ratings": {
        ".write": "auth != null"
      }
    },
    "users": {
      ".write": "auth != null",
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "promos": {
      ".read": true,
      ".write": false
    },
    "featured": {
      ".read": true,
      ".write": false
    },
    "orders": {
      ".read": false,
      ".write": true
    }
  }
}